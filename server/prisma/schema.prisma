generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  fullName        String
  email           String    @unique
  passwordHash    String
  profileImage    String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  messageSent     Message[] @relation("MessagesSent")
  messageReceived Message[] @relation("MessagesReceived")
}

model Message {
  id              String   @id @default(cuid())
  senderId        String
  receiverId      String
  content         String
  createdAt       DateTime @default(now())
  messageSender   User     @relation("MessagesSent", fields: [senderId], references: [id])
  messageReceiver User     @relation("MessagesReceived", fields: [receiverId], references: [id])
}
